# -*- mode:makefile -*-
#
# More normal makefile using GNU make and BSD mkdep
#

.PHONY: all lib clean depend

CXX=            c++ -std=c++11
#CXXFLAGS=       -Wall -UNDEBUG -O0 -g -DICI_SW_CRC
CXXFLAGS=       -Wall -DNDEBUG -O3 -Ofast -g -DICI_SW_CRC

uname=		$(shell uname|tr A-Z a-z)
conf?=		conf/$(uname).h

srcs=		$(shell echo *.cc)
objs=		$(srcs:.cc=.o)
hdrs=		$(shell ls *.h|grep -v anici\\.h)
libs=		-ldl -lpthread

all:		anici.h

anici.h:	anici $(hdrs) mk-ici-h.ici
	LD_LIBRARY_PATH=`pwd` ./anici mk-ici-h.ici $(conf)

STATIC = yes

ifdef STATIC
anici:	etc/main.cc $(objs)
	$(CXX) $(CXXFLAGS) etc/main.cc $(objs) $(libs) -o $@

else

anici:		libanici.so
	$(CXX) $(CXXFLAGS) etc/main.cc libanici.so -o $@

libanici.so : $(objs)
	$(CXX) $(CXXFLAGS) -shared $(objs) $(libs) -o $@

$(objs) : %.o : %.cc
	$(CXX) $(CXXFLAGS) -fPIC -c $<

endif

clean:
	rm -f anici libanici.so anici.h $(objs) .depend

depend:
	MKDEP_CPP="$(CXX) -E" mkdep $(CXXFLAGS) $(srcs)

-include .depend
